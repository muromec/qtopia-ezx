    "set" => [ "enable-%", "Enable server widget samples." ],
    "unset" => [ "no-%", "Disable server widget samples." ],
    "default" => 1,
    "visible" => $qtopia_visref,
    "autodep" => $qtopia_visref,
    "silentignore" => [ "no-samples" ],
    "config_pri" => "CONFIG+=enable_samples",
});
